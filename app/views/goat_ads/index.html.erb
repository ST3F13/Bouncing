 <div class="container_card">
        <div class="content">
           <h1><%= @feature %></h1>
              <div class="cards">
                <% @goat_ads.each do |goat_ad| %>
                <%= link_to goat_ad_path(goat_ad), class: "text-decoration-none" do  %>
                  <div class="card">
                    <div class="card-image">
                      <% goat_ad.medias.first(1).each do |media| %>
                      <%= cl_image_tag media.key, height: 200, width: 200, crop: :fill%>
                      <% end %>
                    </div>
                  <div class="card-info">
                    <h3><%= goat_ad.name %></h3>
                    <p><%= goat_ad.description %></p>
                    <h6><%= goat_ad.price_per_day %>€/day</h6>
                  </div>
                </div>
              <% end %>
              <% end %>
              </div>
        </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<div class="footer">
  <h6>© 2021 Team Oukilé, Inc.</h6>
</div>
